pipeline {
    agent any
    stages {
        stage('Checkout GIT') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/gaichesamar/categorie_produit.git']]
                ])
            }
        }

        stage('MVN CLEAN') {
            steps {
                bat 'mvn clean'
                    }
                            }
            stage('MVN COMPILE') {
                    steps {
                        bat 'mvn compile'
                    }
                }

                stage('MVN PACKAGE') {
                    steps {
                        bat 'mvn package'
                    }
                }

                stage('MVN TEST') {
                    steps {
                        bat 'mvn test'
                    }
                }
                     stage('Docker login') {

                                            steps {
                                             bat 'echo "login Docker ...."'
                                              bat 'docker login -u samarga -p Samar2022'
                                                         }  }
            	 stage('Docker push'){
                                  steps{
                                           bat 'echo " Docker is pushing ...."'
                                             bat 'docker push samarga/produit-1.0.0:latest'

                                                            }
                                                        }









      }
    }