pipeline {
    agent any
    stages {
        stage('Checkout GIT') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/gaichesamar/categorie_produit.git']]
                ])
            }
        }

        stage('MVN CLEAN') {
            steps {
                bat 'mvn clean'
                    }
                            }
            stage('MVN COMPILE') {
                    steps {
                        bat 'mvn compile'
                    }
                }

                stage('MVN PACKAGE') {
                    steps {
                        bat 'mvn package'
                    }
                }

                stage('MVN TEST') {
                    steps {
                        bat 'mvn test'
                    }
                }

            	 stage('Build docker image'){
                                  steps{
                                          script{
                                              sh 'docker build -t samarga/devops-integration'
                                                              }
                                                            }
                                                        }
                            stage('Docker login') {

                                            steps {
                                              sh 'echo "login Docker ...."'
                                              sh 'docker login -u samarga -p Samar2022'
                                                         }  }








      }
    }